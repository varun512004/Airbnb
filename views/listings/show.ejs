<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Listing Details</h1>
    </div>
    <div class="card col-6 offset-2 show-card">
        <div class="card-body">
            <h5 class="card-text"><b><%= listing.title %></b></h5>
        </div>
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.image.filename %>">
        <div class="card-body">
            <p class="card-text">
                <%= listing.description %> <br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
    </div>
</div>
<div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-2">Edit</a>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger offset-4">Delete</button>
    </form>
</div>